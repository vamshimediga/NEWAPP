                <button type="button" id="createUserAdminBtn" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // AJAX form submission
            $('#createUserAdminBtn').click(function () {debugger
                $.ajax({
                    url: '@Url.Action("Create", "UserAdmin")', // Replace with your controller action URL
                    method: 'POST',
                    data: $('#createUserAdminForm').serialize(),
                    success: function (response) {
                        window.location.href = '@Url.Action("Index", "UserAdmin")';
                    },
                    error: function (error) {
                        // Handle error response
                        console.error('Error creating UserAdmin:', error);
                        // Optionally, display error messages or handle UI updates
                    }
                });
            });
        });
    </script>
}
