@model DomainModels.Userchkradio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Userchkradio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Userradiochkdrop", FormMethod.Post))
        {
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    @foreach (var gender in (List<SelectListItem>)ViewBag.GenderOptions)
                    {
                        <option value="@gender.Value">@gender.Text</option>
                    }
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input type="hidden" asp-for="EmailNotifications" value="false" />
                <input type="checkbox" asp-for="EmailNotifications" id="EmailNotifications" class="form-check-input" />
                <label class="form-check-label" asp-for="EmailNotifications">@Html.DisplayNameFor(model => model.EmailNotifications)</label>
            </div>

            <div class="form-group">
                <label asp-for="CountryID" class="control-label"></label>
                <select asp-for="CountryID" class="form-control">
                    @foreach (var country in (List<SelectListItem>)ViewBag.CountryList)
                    {
                        <option value="@country.Value">@country.Text</option>
                    }
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
