@model IEnumerable<CompanyViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<!-- Form to handle multiple delete -->
@Html.AntiForgeryToken()
<form asp-action="Delete" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="companyIDs" value="@item.CompanyID" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CompanyID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CompanyID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CompanyID })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Button to submit selected IDs for deletion -->
    <button type="submit" class="btn btn-danger">Delete Selected</button>
</form>
