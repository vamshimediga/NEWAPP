@model NEWAPP.Models.AuthorViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AuthorViewModel</h4>
<hr />
@using (Html.BeginForm("Create", "Author", FormMethod.Post))
{
    @Html.AntiForgeryToken()
