@model DomainModels.AdminUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AdminUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_SERIAL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_SERIAL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form id="deleteForm" method="post">
        <input type="hidden" asp-for="ID_SERIAL" />
        <button type="button" id="deleteBtn" class="btn btn-danger">Delete</button> 
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#deleteBtn').click(function () {debugger
                if (confirm("Are you sure you want to delete this item?")) {
                    $.ajax({
                        url: '@Url.Action("Delete", "AdminUsers")',
                        type: 'post',
                        data: $('#deleteForm').serialize(),
                        success: function (result) {debugger
                            // Handle success, maybe show a message or redirect
                            window.location.href = '@Url.Action("Index", "AdminUsers")';
                        },
                        error: function (xhr, status, error) {
                            // Handle error
                            console.error(xhr.responseText);
                        }
                    });
                }
            });
        });
    </script>
}
