@model IEnumerable<NEWAPP.Models.MeetingViewModel>

@{
    ViewData["Title"] = "Meeting Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.IsListView != null && ViewBag.IsListView == true)
{
    <!-- Index (List of Meetings) -->
    <p>
        <a asp-action="Create">Create New Meeting</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MeetingID)</th>
                <th>@Html.DisplayNameFor(model => model.CampaignID)</th>
                <th>@Html.DisplayNameFor(model => model.MeetingDate)</th>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MeetingID)</td>
                <td>@Html.DisplayFor(modelItem => item.CampaignID)</td>
                <td>@Html.DisplayFor(modelItem => item.MeetingDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MeetingID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MeetingID })
                </td>
            </tr>
        }
        </tbody>
    </table>
}

